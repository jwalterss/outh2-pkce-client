{
  "name": "oauth2-pkce-client",
  "version": "1.0.0",
  "description": "Secure OAuth2 Authorization Code Flow with PKCE implementation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "version": "npm run build"
  },
  "keywords": [
    "oauth2",
    "pkce",
    "authentication",
    "authorization",
    "react",
    "typescript",
    "security"
  ],
  "author": "Jeremy Walters",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/oauth2-pkce-client"
  },
  "bugs": {
    "url": "https://github.com/yourorg/oauth2-pkce-client/issues"
  },
  "homepage": "https://github.com/yourorg/oauth2-pkce-client#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@testing-library/react": "^14.0.0",
    "@vitest/ui": "^1.0.0",
    "esbuild": "^0.19.0",
    "jsdom": "^23.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}